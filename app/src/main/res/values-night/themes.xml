        <item name="itemBackgroundColor">#FF000000</item>
        <item name="homeBackgroundColor">#151515</item>
        <item name="bottomBackgroundColor">#FF000000</item>
        <item name="circleColor">#FF000000</item>
        <item name="defaultIconColor">#ffffff</item>

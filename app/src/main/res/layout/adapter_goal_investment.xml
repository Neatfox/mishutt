<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:animateLayoutChanges="true"
    tools:context=".ui.adapter.GoalInvestmentAdapter">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_rectangle"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="6dp"
        card_view:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/itemBackgroundColor"
            android:padding="10dp"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/investment_type"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/tv_investment_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/investment_type"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/scheme_name"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/tv_scheme_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/scheme_name"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/amount"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/tv_investment_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/rupee"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/aum"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/tv_aum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/rupee"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/exit_load"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/tv_exit_load"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/exit_load"
                        android:textSize="12sp"
                        android:textColor="?attr/textColor" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_apply"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:text="@string/apply"
                android:textColor="?attr/itemBackgroundColor"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
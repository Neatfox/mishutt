<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".ui.fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="6dp"
                card_view:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/itemBackgroundColor"
                    android:padding="20dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/tv_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/action_button"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/edit_profile"
                        android:textColor="?attr/commonTextColor"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:drawablePadding="10dp"
                        android:drawableTint="?attr/colorPrimary"
                        app:drawableEndCompat="@drawable/ic_next" />

                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_profile_image"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_profile_image"
                            android:scaleType="centerCrop"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_camera"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:tint="?attr/selectedIconColor"
                            app:backgroundTint="@color/green"
                            app:srcCompat="@drawable/ic_camera"
                            app:layout_anchor="@+id/iv_profile_image"
                            app:layout_anchorGravity="end|bottom"
                            android:contentDescription="@string/image">
                        </com.google.android.material.floatingactionbutton.FloatingActionButton>

                        <ProgressBar
                            android:id="@+id/loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />
                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    <TextView
                        android:id="@+id/tv_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/mobile_number"
                        android:textColor="?attr/textColor"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        app:shimmer_duration="1000"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>

                            <include layout="@layout/placeholder_profile"/>
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <LinearLayout
                        android:id="@+id/layout_profile_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/name"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/name"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/address"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/address"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/email_id"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_email_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/email_id_hint"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/date_of_birth"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_date_of_birth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/date_hint"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_spouse_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/spouse_name"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_spouse_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/spouse_name"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_spouse_date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/spouse_date_of_birth"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_spouse_date_of_birth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/date_hint"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_wedding_anniversary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/wedding_anniversary"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_wedding_anniversary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/date_hint"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_number_of_children"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/number_of_children"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_number_of_children"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/number_of_children"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_profession"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/profession"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_profession"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/profession"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_annual_income"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/annual_income"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_annual_income"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/annual_income"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_number_of_dependents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/number_of_dependents"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_number_of_dependents"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/number_of_dependents"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_aadhaar_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/aadhaar_number"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_aadhaar_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/aadhaar_number"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_pan_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/pan_no"
                                android:textColor="?attr/commonTextColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_pan_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/pan_no"
                                android:textColor="?attr/textColor"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:padding="15dp"
                        android:hint="@string/credit_quality"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textCapWords"
                        android:cursorVisible="false"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:textColorHint="?attr/metaHintColor"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/et_user_photo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/add_photo"
                            android:textSize="15sp"
                            android:textColor="?attr/textColor"
                            android:inputType="textCapWords"
                            android:enabled="false"
                            android:importantForAutofill="no"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ib_add_user_photo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/background_button"
                        android:tint="@color/black"
                        android:elevation="10dp"
                        app:srcCompat="@drawable/fab_add"
                        app:layout_anchor="@+id/et_user_photo"
                        app:layout_anchorGravity="end|center"
                        android:contentDescription="@string/image" />
                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:textColorHint="?attr/metaHintColor"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/et_upload_presentation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/add_presentation"
                            android:textSize="15sp"
                            android:textColor="?attr/textColor"
                            android:inputType="textCapWords"
                            android:cursorVisible="false"
                            android:textIsSelectable="false"
                            android:importantForAutofill="no" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ib_add_presentation"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/background_button"
                        android:tint="@color/black"
                        android:elevation="10dp"
                        app:srcCompat="@drawable/fab_add"
                        app:layout_anchor="@+id/et_upload_presentation"
                        app:layout_anchorGravity="end|center"
                        android:contentDescription="@string/image" />
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
                <!--....................................Blank....................................-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_loan_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loan_information"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:lineSpacingExtra="5dp" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:prefixText="@string/rupee"
                    app:prefixTextAppearance="@style/TextStyle"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_requested_loan_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/requested_loan_amount"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="10"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_number_of_deposits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_of_deposits"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="3"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:prefixText="@string/rupee"
                    app:prefixTextAppearance="@style/TextStyle"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_total_amount_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/total_amount_deposit"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="10"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:prefixText="@string/rupee"
                    app:prefixTextAppearance="@style/TextStyle"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_ending_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ending_balance"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="10"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/et_use_of_funds"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:padding="15dp"
                        android:hint="@string/use_of_funds"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textCapWords"
                        android:cursorVisible="false"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>
                <!--....................................Blank....................................-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_business_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/business_information"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:lineSpacingExtra="5dp" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_business_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/business_name"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textCapWords"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"

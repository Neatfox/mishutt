<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.fragment.TransactionChartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_rectangle"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="6dp"
            card_view:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/itemBackgroundColor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="@string/view_category_wise"
                    android:textColor="?attr/textColor"
                    android:textSize="15sp"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_transaction_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">
                </androidx.appcompat.widget.AppCompatSpinner>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_start_date"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/start_date"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_end_date"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/end_date"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_submit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                app:srcCompat="@drawable/ic_next"
                android:contentDescription="@string/image"
                app:tint="?attr/backgroundColor" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="6dp"
                card_view:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/itemBackgroundColor"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/tv_chart_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:lines="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/spend_analyzer"
                        android:textColor="?attr/textColor"
                        android:textSize="15sp" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:padding="10dp"/>

                    <LinearLayout
                        android:id="@+id/layout_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_alert"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="15sp"
                                android:textColor="?attr/countBackgroundColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:animateLayoutChanges="true">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_recommendation_one"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_recommendation_two"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_suggestions_earning_spending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:animateLayoutChanges="true">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_suggestion_one"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_suggestion_two"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_suggestions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:animateLayoutChanges="true">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_suggestion_three"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_suggestion_four"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_suggestion_five"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_suggestion_six"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_suggestion_seven"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_suggestion_eight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:hint="@string/blank"
                                android:textSize="15sp"
                                android:textColor="?attr/textColor"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:enabled="false"
                                android:importantForAutofill="no" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_data"
        android:textColor="?attr/textColor"
        android:textSize="15sp"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
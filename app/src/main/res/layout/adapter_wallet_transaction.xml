<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:animateLayoutChanges="true"
    tools:context=".ui.adapter.WalletTransactionAdapter">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_rectangle"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="6dp"
        card_view:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/itemBackgroundColor"
            android:padding="10dp"
            android:animateLayoutChanges="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="5dp"
                android:src="@drawable/rupee_color"
                android:contentDescription="@string/image"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/category"
                    android:textSize="15sp"
                    android:textColor="?attr/textColor" />

                <TextView
                    android:id="@+id/tv_transaction_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/date_hint"
                    android:textSize="12sp"
                    android:textColor="?attr/textColor" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/rupee"
                android:textSize="15sp"
                android:textColor="?attr/textColor" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
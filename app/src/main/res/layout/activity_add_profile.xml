<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.activity.AddProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_back"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="60dp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="@string/edit_profile"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_profile_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textCapWords"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textCapWords"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_pin_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/PIN_code"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="6"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:prefixText="+91 "
                    app:prefixTextAppearance="@style/TextStyle"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/mobile_number"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="10"
                        android:enabled="false"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_id"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textEmailAddress"
                        android:enabled="false"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/date_of_birth"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="date"
                        android:maxLength="10"
                        android:cursorVisible="false"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_spouse_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/spouse_name"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textCapWords"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_spouse_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/spouse_date_of_birth"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="date"
                        android:maxLength="10"
                        android:cursorVisible="false"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_wedding_anniversary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/wedding_anniversary"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="date"
                        android:maxLength="10"
                        android:cursorVisible="false"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_number_of_children"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_of_children"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="2"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_profession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/profession"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:prefixText="@string/rupee"
                    app:prefixTextAppearance="@style/TextStyle"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_annual_income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/annual_income"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="10"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_number_of_dependents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_of_dependents"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="2"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/layout_aadhaar_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_aadhaar_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/aadhaar_number"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="number"
                        android:maxLength="12"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/layout_pan_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/metaHintColor"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/et_pan_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pan_no"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"
                        android:inputType="textCapCharacters"
                        android:maxLength="10"
                        android:selectAllOnFocus="true"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>
                <!--....................................Blank....................................-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5" />
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="?attr/itemBackgroundColor"
        app:layout_constraintEnd_toEndOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="@id/scrollView"
        app:layout_constraintBottom_toTopOf="@id/layout_blank"
        android:animateLayoutChanges="true">

        <Button
            android:id="@+id/button_update_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bottom_layout_background"
            android:fontFamily="sans-serif-medium"
            android:text="@string/update_profile"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?attr/backgroundColor"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
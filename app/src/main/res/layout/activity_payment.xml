<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.activity.PaymentActivity">

    <LinearLayout
        android:id="@+id/layout_gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/itemBackgroundColor"
            android:padding="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/recharge"
            android:textSize="15sp"
            android:textColor="?attr/textColor" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:shimmer_duration="1000"
            android:visibility="gone">

            <!--.............................Adding placeholders.............................-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:baselineAligned="false">

                <include layout="@layout/placeholder_grid_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <include layout="@layout/placeholder_grid_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <include layout="@layout/placeholder_grid_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <GridView
            android:id="@+id/grid_view_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/homeBackgroundColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:numColumns="3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/itemBackgroundColor"
            android:padding="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/bill_payment"
            android:textSize="15sp"
            android:textColor="?attr/textColor"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:shimmer_duration="1000"
            android:visibility="gone">

            <!--.............................Adding placeholders.............................-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <include layout="@layout/placeholder_grid_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <include layout="@layout/placeholder_grid_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <include layout="@layout/placeholder_grid_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <include layout="@layout/placeholder_grid_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <include layout="@layout/placeholder_grid_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <include layout="@layout/placeholder_grid_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <GridView
            android:id="@+id/grid_view_bill_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/homeBackgroundColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:numColumns="3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/itemBackgroundColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/itemBackgroundColor"
            android:layout_marginEnd="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:textAlignment="textEnd"
            android:text="@string/powered_by"
            android:textSize="12sp"
            android:textColor="?attr/textColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/itemBackgroundColor"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:src="@drawable/bill_desk"
                android:contentDescription="@string/image"/>
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
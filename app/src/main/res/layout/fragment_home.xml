<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:elevation="10dp">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider_banner"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        app:sliderAnimationDuration="1000"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="1000"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="5dp"
                        app:sliderIndicatorPadding="1dp"
                        app:sliderIndicatorRadius="1.5dp"
                        app:sliderIndicatorSelectedColor="?attr/selectedIconColor"
                        app:sliderIndicatorUnselectedColor="?attr/defaultIconColor"
                        app:sliderIndicatorOrientation="horizontal" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_expense_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/ripple_rectangle"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="6dp"
                        card_view:elevation="10dp">

                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:layout_width="290dp"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@drawable/card_background"
                            android:animateLayoutChanges="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/expense_manager"
                                android:textColor="?attr/placeholderColor"
                                android:textSize="15sp"/>

                            <LinearLayout
                                android:id="@+id/layout_expense_manager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start"
                                android:layout_marginTop="25dp"
                                android:orientation="vertical"
                                android:animateLayoutChanges="true">

                                <TextView
                                    android:id="@+id/tv_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="@string/earning"
                                    android:textColor="?attr/placeholderColor"
                                    android:textSize="12sp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="5dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/earning"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"
                                        tools:ignore="TooDeepLayout" />

                                    <TextView
                                        android:id="@+id/tv_earning"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/rupee"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="5dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/spending"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tv_spending"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/rupee"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_alert"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="@string/expense_manager"
                                    android:textColor="?attr/countBackgroundColor"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:visibility="gone"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_no_expense"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/no_earning_expense"
                                android:textColor="?attr/placeholderColor"
                                android:textSize="12sp"
                                android:visibility="gone"/>

                            <ProgressBar
                                android:id="@+id/loading_expense_manager"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone" />
                        </androidx.coordinatorlayout.widget.CoordinatorLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/ripple_rectangle"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        card_view:cardCornerRadius="6dp"
                        card_view:elevation="10dp">

                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:layout_width="290dp"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@drawable/card_background"
                            android:animateLayoutChanges="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/goal_manager"
                                android:textColor="?attr/placeholderColor"
                                android:textSize="15sp"/>

                            <LinearLayout
                                android:id="@+id/layout_goal_manager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:orientation="vertical"
                                android:animateLayoutChanges="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/goal_type"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tv_goal_type"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/goal_type"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/goal_amount"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tv_goal_amount"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/goal_amount"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/duration"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tv_duration"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/duration"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/down_payment"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tv_down_payment"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/down_payment"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/emi"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tv_emi"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/emi"
                                        android:textColor="?attr/placeholderColor"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_no_goal"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:text="@string/no_goal"
                                android:textColor="?attr/placeholderColor"
                                android:textSize="12sp"
                                android:visibility="gone"/>

                            <ProgressBar
                                android:id="@+id/loading_goal_manager"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone" />
                        </androidx.coordinatorlayout.widget.CoordinatorLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/ripple_rectangle"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="6dp"
                        card_view:elevation="10dp">

                        <LinearLayout
                            android:layout_width="290dp"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@drawable/card_background"
                            android:animateLayoutChanges="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/wallet"
                                android:textColor="?attr/placeholderColor"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="sans-serif-medium"
                                android:textAlignment="center"
                                android:text="@string/wallet_balance"
                                android:textColor="?attr/placeholderColor"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_wallet_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-medium"
                                android:textAlignment="center"
                                android:text="@string/p"
                                android:textColor="?attr/placeholderColor"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_add_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:layout_gravity="end"
                                android:background="@drawable/ripple_rectangle"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/add_money"
                                android:textColor="?attr/placeholderColor"
                                android:textSize="15sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:shimmer_duration="1000"
                android:visibility="gone">

                <!--.............................Adding placeholders.............................-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:baselineAligned="false">

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:baselineAligned="false">

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:baselineAligned="false">

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <include layout="@layout/placeholder_grid_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <GridView
                android:id="@+id/grid_view_less"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/homeBackgroundColor"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:numColumns="3"/>

            <GridView
                android:id="@+id/grid_view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/homeBackgroundColor"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:numColumns="3"
                android:visibility="gone"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                card_view:cardCornerRadius="6dp"
                card_view:elevation="10dp">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider_ad"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    app:sliderAnimationDuration="1000"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="1000"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="5dp"
                    app:sliderIndicatorPadding="1dp"
                    app:sliderIndicatorRadius="1.5dp"
                    app:sliderIndicatorSelectedColor="?attr/selectedIconColor"
                    app:sliderIndicatorUnselectedColor="?attr/defaultIconColor"
                    app:sliderIndicatorOrientation="horizontal" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/itemBackgroundColor"
                android:padding="10dp"
                android:textAlignment="center"
                android:text="@string/why_choose_us"
                android:textColor="?attr/textColor"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                card_view:cardCornerRadius="6dp"
                card_view:elevation="10dp">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider_goal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:sliderAnimationDuration="1000"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="1000"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="5dp"
                    app:sliderIndicatorPadding="1dp"
                    app:sliderIndicatorRadius="0dp"
                    app:sliderIndicatorSelectedColor="?attr/selectedIconColor"
                    app:sliderIndicatorUnselectedColor="?attr/defaultIconColor"
                    app:sliderIndicatorOrientation="horizontal" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/itemBackgroundColor"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="5dp"
                    android:src="@drawable/mishutt"
                    android:contentDescription="@string/image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/credit_score_header_one"
                        android:textColor="?attr/textColor"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/credit_score_description_one"
                        android:textColor="?attr/textColor"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/itemBackgroundColor"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="5dp"
                    android:src="@drawable/mishutt"
                    android:contentDescription="@string/image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/credit_score_header_two"
                        android:textColor="?attr/textColor"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/credit_score_description_two"
                        android:textColor="?attr/textColor"
                        android:textSize="15sp"
                        tools:ignore="TooManyViews" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/itemBackgroundColor"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="5dp"
                    android:src="@drawable/mishutt"
                    android:contentDescription="@string/image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/credit_score_header_three"
                        android:textColor="?attr/textColor"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/credit_score_description_three"
                        android:textColor="?attr/textColor"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/itemBackgroundColor"
                android:padding="5dp"
                app:tabTextAppearance="@style/AppTabTextAppearance"
                app:tabBackground="?attr/backgroundColor"
                app:tabIconTint="?attr/colorPrimary"
                app:tabIndicatorHeight="0dp"
                app:tabMinWidth="100dp"
                app:tabMaxWidth="150dp"
                app:tabMode="scrollable"
                app:tabGravity="start">
